<form action="CheckRoomAvailability" method="post">
    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input for="StartDate" name="StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input for="EndDate" name="EndDate" class="form-control" />
    </div>
    <div class="form-group">
        <label for="RoomType">Room Type</label>
        <input for="RoomType" name="RoomType" class="form-control" />
    </div>
    <div class="form-group">
        <label for="NoOfRooms">Rooms Required</label>
        <input for="NoOfRooms" name="NoOfRooms" class="form-control" />
    </div>
    <input type="submit" value="Check" class="btn btn-sm btn-success text-uppercase rounded-0" />
</form>  